<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/corner_activity_padding"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_40dp">


            <TextView
                android:id="@+id/back_arrow_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/_24dp"
                android:fontFamily="@font/yandex_sans_display_regular"
                android:letterSpacing="0"
                android:text="@string/settings_text"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_22sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/arrow_back_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yandex_sans_display_regular"
                    android:letterSpacing="0"
                    android:paddingVertical="@dimen/_21dp"
                    android:text="@string/dark_theme_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:thumbTint="@color/grey"
                    android:trackTint="@color/light_grey" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/yandex_sans_display_regular"
                    android:letterSpacing="0"
                    android:paddingVertical="@dimen/_21dp"
                    android:text="@string/share_app_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingVertical="@dimen/_21dp"
                    android:src="@drawable/share_icon"
                    app:tint="@color/grey" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yandex_sans_display_regular"
                    android:letterSpacing="0"
                    android:paddingVertical="@dimen/_21dp"
                    android:text="@string/support_call_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingVertical="@dimen/_21dp"
                    android:src="@drawable/support_icon"
                    app:tint="@color/grey" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yandex_sans_display_regular"
                    android:letterSpacing="0"
                    android:paddingVertical="@dimen/_21dp"
                    android:text="@string/user_agreement_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingVertical="@dimen/_21dp"
                    android:src="@drawable/arrow_forward_icon"
                    app:tint="@color/grey" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
